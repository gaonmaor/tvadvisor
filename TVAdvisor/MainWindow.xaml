<Window xmlns:my="clr-namespace:TVAdvisor"  x:Class="TVAdvisor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="mainWindow"  Title="MainWindow" WindowState="Maximized" Width="800" Height="600">
    <Grid>
        <TabControl x:Name="tcPanels" >
            <TabItem Header="EPG Viewer" Name="tiEPG">
                <my:UCEPGViewer />
            </TabItem>
            <TabItem Header="Configurator" Name="tiConfigurator">
                <my:UCConfigurator />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
