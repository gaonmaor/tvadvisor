<Window x:Class="GUILayer.ActorPopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Actor: " Width="500" PreviewKeyDown="Window_PreviewKeyDown" WindowStyle="None" Height="320"
        AllowsTransparency="True">
    <Border BorderThickness="2" BorderBrush="#FF110845" CornerRadius="30">
        <Grid>
            <Grid.Clip>
                <GeometryGroup>
                    <RectangleGeometry RadiusX="30" RadiusY="30" Rect="0,0,500,320" />
                </GeometryGroup>
            </Grid.Clip>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition  Height="auto"/>
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Label x:Name="lblName" Content="Alain Delon" HorizontalContentAlignment="Center" Grid.Row="0" Background="#FF7EB5E5" Foreground="White" FontSize="16" FontWeight="Bold" />
            <ScrollViewer Background="#FFFFFFF3" Grid.Row="1" Height="240">
                <TextBlock Margin="10" x:Name="lblBiography" TextWrapping="WrapWithOverflow" Text="No biography available."/>
            </ScrollViewer>
            <Button x:Name="btnClose" Content="Close" Grid.Row="2" Background="#FFE5E5E5" Click="btnClose_Click" />
        </Grid>
    </Border>
</Window>
