<Window x:Class="GUILayer.PleaseWaitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Please Wait Window" Width="300" Height="120" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:FieldModifier="public" x:Name="lblMessage" Content="Please Wait." Grid.Row="0"/>
        <ProgressBar Grid.Row="1" IsIndeterminate="True" VerticalAlignment="Top" Height="20" Margin="0,15,0,15" />
    </Grid>
</Window>
